{
    "manifest_version": 2,
    "name": "CrypTag Clip",
    "description": "Save details of the current page to cryptagd, a local, trusted, secure API",
    "version": "0.4",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}